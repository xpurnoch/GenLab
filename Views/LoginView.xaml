<UserControl
    x:Class="BioLabManager.Views.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:helpers="clr-namespace:BioLabManager.Helpers"
    Background="#1e1e2f">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Border
            Width="350"
            Padding="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="#2c2f48"
            CornerRadius="10">
            <StackPanel>

                <!--  picture  -->
                <Grid HorizontalAlignment="Center">
                    <Ellipse
                        Width="80"
                        Height="80"
                        Margin="0,20,0,20"
                        HorizontalAlignment="Center">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/Assets/dna.png" />
                        </Ellipse.Fill>
                    </Ellipse>
                </Grid>
                <TextBlock
                    Margin="0,20,0,5"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Welcome Back!" />
                <TextBlock
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center"
                    FontSize="12"
                    Foreground="#aaa"
                    Text="Log in to your existing account" />

                <!--  username  -->
                <Label
                    Margin="0,0,0,5"
                    Content="Username"
                    FontSize="12"
                    Foreground="White" />
                <Grid Margin="0,0,0,15">
                    <TextBlock
                        x:Name="UsernamePlaceholder"
                        Margin="10,6,0,0"
                        VerticalAlignment="Top"
                        FontSize="12"
                        Foreground="Gray"
                        IsHitTestVisible="False"
                        Opacity="0.8"
                        Text="Enter Username" />
                    <TextBox
                        x:Name="UsernameBox"
                        Height="35"
                        Padding="10,6"
                        Background="#3b3f58"
                        BorderThickness="0"
                        CaretBrush="White"
                        FontSize="14"
                        Foreground="White"
                        Text="{Binding Username, Mode=TwoWay}" />
                </Grid>

                <!--  password  -->
                <Label
                    Margin="0,0,0,5"
                    Content="Password"
                    FontSize="12"
                    Foreground="White" />
                <Grid Margin="0,0,0,15">
                    <TextBlock
                        x:Name="PasswordPlaceholder"
                        Margin="10,6,0,0"
                        VerticalAlignment="Top"
                        FontSize="12"
                        Foreground="Gray"
                        IsHitTestVisible="False"
                        Opacity="0.8"
                        Text="Enter Password" />
                    <PasswordBox
                        x:Name="PasswordBox"
                        Height="35"
                        Padding="10,6"
                        helpers:PasswordHelper.BindPassword="True"
                        helpers:PasswordHelper.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Background="#3b3f58"
                        BorderThickness="0"
                        CaretBrush="White"
                        FontSize="14"
                        Foreground="White" />
                </Grid>

                <!--  login button  -->
                <Button
                    Height="35"
                    Margin="0,10,0,0"
                    Background="#007acc"
                    BorderThickness="0"
                    Command="{Binding LoginCommand}"
                    Content="LOG IN"
                    Cursor="Hand"
                    FontWeight="Bold"
                    Foreground="White">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border
                                            x:Name="border"
                                            Padding="10,4"
                                            Background="#007acc"
                                            CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#289aff" />
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#005fa3" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <!--  create account  -->
                <TextBlock
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    Cursor="Hand"
                    Foreground="#4aa0ff"
                    Text="Create Account">
                    <TextBlock.InputBindings>
                        <MouseBinding Command="{Binding GoToRegisterCommand}" Gesture="LeftClick" />
                    </TextBlock.InputBindings>
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextDecorations" Value="{x:Null}" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="TextDecorations" Value="Underline" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
