<UserControl
    x:Class="BioLabManager.Views.SequenceMatcherView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:BioLabManager.ViewModels"
    Background="#1e1e2f"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <viewmodels:SequenceMatcherViewModel />
    </UserControl.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  title + input  -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock
                Margin="0,0,0,10"
                FontSize="24"
                FontWeight="Bold"
                Foreground="White"
                Text="🔍 Sequence Match" />

            <TextBox
                Height="35"
                Padding="8"
                mah:TextBoxHelper.Watermark="Enter DNA/Protein sequence to match..."
                Background="#2c2f48"
                BorderThickness="0"
                CaretBrush="White"
                FontSize="14"
                Foreground="White"
                PreviewTextInput="InputSequence_PreviewTextInput"
                Text="{Binding InputSequence, UpdateSourceTrigger=PropertyChanged}" />
            <Button
                Width="200"
                Height="35"
                Margin="0,10,10,0"
                HorizontalAlignment="Left"
                Background="#007acc"
                BorderThickness="0"
                Command="{Binding MatchSequenceCommand}"
                Content="🔬 MATCH"
                Cursor="Hand"
                FontWeight="Bold"
                Foreground="White">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border
                                        x:Name="border"
                                        Padding="10,4"
                                        Background="#007acc"
                                        CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#289aff" />
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#005fa3" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

        <!--  result  -->
        <StackPanel Grid.Row="1">

            <TextBlock
                Margin="0,0,0,8"
                FontSize="16"
                Foreground="White"
                Text="{Binding BestMatchIdentifier, StringFormat=Best match: {0}}" />
            <TextBlock
                Margin="0,0,0,20"
                FontSize="14"
                Foreground="LightGray"
                Text="{Binding BestDistance, StringFormat=Levenshtein Distance: {0}}" />

            <TextBlock
                Margin="0,0,0,10"
                HorizontalAlignment="Center"
                FontSize="18"
                FontWeight="SemiBold"
                Foreground="White"
                Text="🔹 Your Input Sequence" />

            <ScrollViewer
                Height="180"
                HorizontalAlignment="Center"
                VerticalScrollBarVisibility="Hidden">
                <ItemsControl ItemsSource="{Binding InputVisual}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Width="20"
                                Height="20"
                                Margin="1"
                                Background="{Binding Color}">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontWeight="Bold"
                                    Foreground="Black"
                                    Text="{Binding Base}" />
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <TextBlock
                Margin="20,20,0,10"
                HorizontalAlignment="Center"
                FontSize="18"
                FontWeight="SemiBold"
                Foreground="White"
                Text="🔸 Closest Sample Match" />

            <ScrollViewer
                Height="180"
                HorizontalAlignment="Center"
                VerticalScrollBarVisibility="Hidden">
                <ItemsControl ItemsSource="{Binding MatchVisual}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Width="20"
                                Height="20"
                                Margin="1"
                                Background="{Binding Color}">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontWeight="Bold"
                                    Foreground="Black"
                                    Text="{Binding Base}" />
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</UserControl>
