<UserControl
    x:Class="BioLabManager.Views.DashboardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:BioLabManager.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="0,5" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter
                                Margin="10,6"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3e4161" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Background="#1e1e2f">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="210" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  sidebar  -->
        <StackPanel VerticalAlignment="Stretch" Background="#2c2f48">
            <TextBlock
                Margin="10,20,10,30"
                FontSize="30"
                FontWeight="Bold"
                Foreground="White"
                Text=" 🧪 GenLab" />

            <StackPanel>
                <Button
                    Command="{Binding NavigateToWelcomeCommand}"
                    Content="🏠 Main Menu"
                    Style="{StaticResource NavButtonStyle}" />
                <Button
                    Command="{Binding NavigateToSamplesCommand}"
                    Content="🧬 Manage Samples"
                    Style="{StaticResource NavButtonStyle}" />
                <Button
                    Command="{Binding NavigateToStatisticsCommand}"
                    Content="📊 Statistics"
                    Style="{StaticResource NavButtonStyle}" />
                <Button
                    Command="{Binding NavigateToBoxVisualizerCommand}"
                    Content="📦 Box Visualizer"
                    Style="{StaticResource NavButtonStyle}" />
                <Button
                    Command="{Binding NavigateToAnalyzerCommand}"
                    Content="🔬 Sequence Analyzer"
                    Style="{StaticResource NavButtonStyle}" />
                <Button
                    Command="{Binding NavigateToMatcherCommand}"
                    Content="🔍 Sequence Match"
                    Style="{StaticResource NavButtonStyle}" />
                <Button
                    Command="{Binding ImportDataCommand}"
                    Content="📤 Import"
                    Style="{StaticResource NavButtonStyle}" />
                <Button
                    Command="{Binding ExportDataCommand}"
                    Content="🖨️ Export"
                    Style="{StaticResource NavButtonStyle}" />
            </StackPanel>
        </StackPanel>

        <StackPanel Margin="10,20,10,10" VerticalAlignment="Bottom">
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <TextBlock
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="{Binding Username, StringFormat=👤 {0}}" />

                <Button
                    Margin="8,0,0,0"
                    Padding="4,2"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Command="{Binding ToggleStatusCommand}"
                    Cursor="Hand"
                    Focusable="False">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border
                                            x:Name="border"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#3e4161" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>

                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <Ellipse
                            Width="8"
                            Height="8"
                            Margin="0,0,4,0"
                            Fill="{Binding StatusColor}" />
                        <TextBlock
                            FontSize="12"
                            Foreground="LightGray"
                            Text="{Binding StatusText}" />
                    </StackPanel>
                </Button>
            </StackPanel>
            <Button
                Margin="-12,0,0,5"
                HorizontalAlignment="Left"
                Command="{Binding LogoutCommand}"
                Content="🚪 Logout"
                Foreground="LightCoral"
                Style="{StaticResource NavButtonStyle}" />
        </StackPanel>

        <!--  main content  -->
        <Grid Grid.Column="1" Margin="20">
            <ContentControl Content="{Binding CurrentView}" />
        </Grid>
    </Grid>
</UserControl>
