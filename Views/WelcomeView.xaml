<UserControl
    x:Class="BioLabManager.Views.WelcomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="800"
    Background="Transparent"
    mc:Ignorable="d">

    <ScrollViewer
        Background="Transparent"
        Focusable="False"
        PanningMode="VerticalOnly"
        VerticalScrollBarVisibility="Hidden">

        <StackPanel Margin="20">

            <TextBlock
                Margin="0,0,0,20"
                FontSize="24"
                FontWeight="Bold"
                Foreground="White"
                Text="⚛ Latest in Science" />

            <ItemsControl ItemsSource="{Binding News}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="0,0,0,15"
                            Padding="12"
                            BorderBrush="White"
                            BorderThickness="1"
                            CornerRadius="6">
                            <StackPanel>
                                <TextBlock
                                    FontSize="18"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="{Binding Title}" />

                                <TextBlock
                                    Margin="0,8,0,4"
                                    Foreground="White"
                                    Text="{Binding Summary}"
                                    TextWrapping="Wrap" />

                                <TextBlock
                                    FontSize="12"
                                    FontStyle="Italic"
                                    Foreground="White"
                                    Text="{Binding PublishedDate}" />

                                <TextBlock Margin="0,5,0,0">
                                    <TextBlock.Resources>
                                        <Style TargetType="Hyperlink">
                                            <Setter Property="Foreground" Value="White" />
                                            <Setter Property="TextDecorations" Value="{x:Null}" />
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="TextDecorations" Value="Underline" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Resources>

                                    <Hyperlink NavigateUri="{Binding Url}" RequestNavigate="Hyperlink_RequestNavigate">
                                        Read more...
                                    </Hyperlink>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <TextBlock
                Margin="0,10,0,10"
                FontWeight="SemiBold"
                Foreground="Red"
                Text="❌ Failed to load news."
                Visibility="{Binding IsNewsLoadFailed, Converter={StaticResource BoolToVisibilityConverter}}" />

        </StackPanel>
    </ScrollViewer>
</UserControl>